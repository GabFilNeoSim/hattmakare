@using Hattmakare.Models.Auth

@model RegisterViewModel

@{
    ViewBag.Title = "Registrera ett nytt konto";
}

<div class="register-container">
    @if (!Model.Locked)
    {
        <h1>Registrera ett konto</h1>
        <div asp-validation-summary="ModelOnly"></div>
        <form method="post" asp-controller="Auth" asp-action="Register">
            <input type="hidden" asp-for="Locked" />
            <div class="register-forms">
                <div class="form-group">
                    <div class="form-text">
                        <label for="FirstName">Förnamn:</label>
                        <span asp-validation-for="User.FirstName" class="field-validation"></span>
                    </div>
                    <input asp-for="User.FirstName" class="form-input" />
                </div>
                <div class="form-group">
                    <div class="form-text">
                        <label for="LastName">Efternamn:</label>
                        <span asp-validation-for="User.LastName" class="field-validation"></span>
                    </div>
                    <input asp-for="User.LastName" class="form-input" />
                </div>
                <div class="form-group">
                    <div class="form-text">
                        <label for="Email">Epost:</label>
                        <span asp-validation-for="User.Email" class="field-validation"></span>
                    </div>
                    <input asp-for="User.Email" class="form-input" />
                </div>
                <div class="form-group">
                    <div class="form-text">
                        <label for="Password">Lösenord:</label>
                        <span asp-validation-for="User.Password" class="field-validation"></span>
                    </div>
                    <input asp-for="User.Password" type="password" class="form-input" />
                </div>
                <div class="form-group">
                    <div class="form-text">
                        <label for="ConfirmPassword">Bekräfta lösenord:</label>
                        <span asp-validation-for="User.ConfirmPassword" class="field-validation"></span>
                    </div>
                    <input asp-for="User.ConfirmPassword" type="password" class="form-input" />
                </div>
                <div class="form-group">
                    <div class="form-text">
                        <label asp-for="User.IsAdmin">Administratör?</label>
                        <span asp-validation-for="User.IsAdmin" class="field-validation"></span>
                    </div>
                    <input asp-for="User.IsAdmin" type="checkbox" class="form-input" />
                </div>
                <div class="form-actions">
                    <button type="submit" class="submit-button">Registrera</button>
                </div>
            </div>
        </form>
    }
    else
    {
        <h1>Sidan är låst</h1>
        <h2>Kontakta en administratör för att skapa ditt konto.</h2>
    }
</div>
