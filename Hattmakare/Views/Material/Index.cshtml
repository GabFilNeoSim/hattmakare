@using Hattmakare.Models.Material

@model MaterialIndexViewModel;

@{
	ViewBag.Title = "Material och dekorationer";
}

<div id="material-container">
	<div id="material-tables">
		<div class="material-table">
			<div class="material-table-header">
				<h2>Material</h2>
				<a asp-controller="Material" asp-action="AddMaterial">
	 				<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 448 512"><path d="M256 80c0-17.7-14.3-32-32-32s-32 14.3-32 32l0 144L48 224c-17.7 0-32 14.3-32 32s14.3 32 32 32l144 0 0 144c0 17.7 14.3 32 32 32s32-14.3 32-32l0-144 144 0c17.7 0 32-14.3 32-32s-14.3-32-32-32l-144 0 0-144z" /></svg>
	 			</a>
			</div>
			<table class="table">
				<tr>
					<th>Namn</th>
					<th>Enhet</th>
					<th>Pris</th>
					<th>Leverantör</th>
				</tr>
				@foreach (var material in Model.Materials)
				{
					<tr>
						<td>@material.Name</td>
						<td>@material.Unit</td>
						<td>@material.Price</td>
						<td>@material.Supplier</td>
						<td>
							<a asp-controller="Material" asp-action="EditMaterial" asp-route-id="@material.Id">
								<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 512 512"><path d="M362.7 19.3L314.3 67.7 444.3 197.7l48.4-48.4c25-25 25-65.5 0-90.5L453.3 19.3c-25-25-65.5-25-90.5 0zm-71 71L58.6 323.5c-10.4 10.4-18 23.3-22.2 37.4L1 481.2C-1.5 489.7 .8 498.8 7 505s15.3 8.5 23.7 6.1l120.3-35.4c14.1-4.2 27-11.8 37.4-22.2L421.7 220.3 291.7 90.3z"/></svg>
							</a>
						</td>
						<td>
							<form asp-controller="Material" asp-action="RemoveMaterial" asp-route-id="@material.Id" method="post">
								<button type="submit">
									<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 448 512"><path d="M135.2 17.7C140.6 6.8 151.7 0 163.8 0L284.2 0c12.1 0 23.2 6.8 28.6 17.7L320 32l96 0c17.7 0 32 14.3 32 32s-14.3 32-32 32L32 96C14.3 96 0 81.7 0 64S14.3 32 32 32l96 0 7.2-14.3zM32 128l384 0 0 320c0 35.3-28.7 64-64 64L96 512c-35.3 0-64-28.7-64-64l0-320zm96 64c-8.8 0-16 7.2-16 16l0 224c0 8.8 7.2 16 16 16s16-7.2 16-16l0-224c0-8.8-7.2-16-16-16zm96 0c-8.8 0-16 7.2-16 16l0 224c0 8.8 7.2 16 16 16s16-7.2 16-16l0-224c0-8.8-7.2-16-16-16zm96 0c-8.8 0-16 7.2-16 16l0 224c0 8.8 7.2 16 16 16s16-7.2 16-16l0-224c0-8.8-7.2-16-16-16z"/></svg>
								</button>
							</form>
						</td>
					</tr>
				}
			</table>
		</div>
		<div class="material-table">
			<div class="material-table-header">
				<h2>Dekorationer</h2>
				<a asp-controller="Material" asp-action="AddMaterial">
					<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 448 512"><path d="M256 80c0-17.7-14.3-32-32-32s-32 14.3-32 32l0 144L48 224c-17.7 0-32 14.3-32 32s14.3 32 32 32l144 0 0 144c0 17.7 14.3 32 32 32s32-14.3 32-32l0-144 144 0c17.7 0 32-14.3 32-32s-14.3-32-32-32l-144 0 0-144z" /></svg>
				</a>
			</div>
			<table class="table">
				<tr>
					<th>Namn</th>
					<th>Enhet</th>
					<th>Pris</th>
					<th>Leverantör</th>
				</tr>
				@foreach (var decoration in Model.Decorations)
				{
					<tr>
						<td>@decoration.Name</td>
						<td>@decoration.Unit</td>
						<td>@decoration.Price</td>
						<td>@decoration.Supplier</td>
						<td>
							<a asp-controller="Material" asp-action="EditMaterial" asp-route-id="@decoration.Id">
								<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 512 512"><path d="M362.7 19.3L314.3 67.7 444.3 197.7l48.4-48.4c25-25 25-65.5 0-90.5L453.3 19.3c-25-25-65.5-25-90.5 0zm-71 71L58.6 323.5c-10.4 10.4-18 23.3-22.2 37.4L1 481.2C-1.5 489.7 .8 498.8 7 505s15.3 8.5 23.7 6.1l120.3-35.4c14.1-4.2 27-11.8 37.4-22.2L421.7 220.3 291.7 90.3z" /></svg>
							</a>
						</td>
						<td>
							<form asp-controller="Material" asp-action="RemoveMaterial" asp-route-id="@decoration.Id" method="post">
								<button type="submit">
									<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 448 512"><path d="M135.2 17.7C140.6 6.8 151.7 0 163.8 0L284.2 0c12.1 0 23.2 6.8 28.6 17.7L320 32l96 0c17.7 0 32 14.3 32 32s-14.3 32-32 32L32 96C14.3 96 0 81.7 0 64S14.3 32 32 32l96 0 7.2-14.3zM32 128l384 0 0 320c0 35.3-28.7 64-64 64L96 512c-35.3 0-64-28.7-64-64l0-320zm96 64c-8.8 0-16 7.2-16 16l0 224c0 8.8 7.2 16 16 16s16-7.2 16-16l0-224c0-8.8-7.2-16-16-16zm96 0c-8.8 0-16 7.2-16 16l0 224c0 8.8 7.2 16 16 16s16-7.2 16-16l0-224c0-8.8-7.2-16-16-16zm96 0c-8.8 0-16 7.2-16 16l0 224c0 8.8 7.2 16 16 16s16-7.2 16-16l0-224c0-8.8-7.2-16-16-16z" /></svg>
								</button>
							</form>
						</td>
					</tr>
				}
			</table>
		</div>
	</div>
</div>
